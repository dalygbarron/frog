script/source = "extends Knob

const MENU_OK = \"Ok Cool\"
const MENU_USE = \"Use Now\"
const MENU_B = \"Equip to B\"
const MENU_Y = \"Equip to Y\"
const MENU_L = \"Equip to L\"
const MENU_R = \"Equip to R\"
const MENU_OPTIONS = [
    MENU_OK,
    MENU_USE,
    MENU_B,
    MENU_Y,
    MENU_L,
    MENU_R
]

func activate(args):
    assert(typeof(args) == TYPE_ARRAY)
    $vbox/quit.connect(\"pressed\", self, \"click\", [$vbox/quit])
    for arg in args:
        var item := arg as Item
        assert(item)
        var button: Button = Util.make_button()
        button.icon = item.icon
        $vbox/grid.add_child(button)
        button.connect(\"pressed\", self, \"click\", [button])
        var itemLink = item.duplicate()
        button.add_child(itemLink)
        itemLink.name = \"item\"
    $anim.play(\"enter\")

func focus() -> void:
    if $vbox/grid.get_child_count() > 0:
        var child := $vbox/grid.get_child(0) as Button
        if child: child.grab_focus()
    else:
        $vbox/quit.grab_focus()

func click(button: Button) -> void:
    var item: Item = button.get_node(\"item\")
    if not item:
        $anim.play(\"exit\")
        yield($anim, \"animation_finished\")
        end(null)
        return
    var choice = yield(Gui.notice(
        \"%s\\n%s\" % [item.displayName, item.description],
        MENU_OPTIONS
    ), \"completed\")
    match MENU_OPTIONS[choice]:
        MENU_OK:
            return
        MENU_USE:
            return
        MENU_B:
            return
        MENU_Y:
            return
        MENU_L:
            return
        MENU_R:
            return
"

